<?xml version ="2.0"?>
<robot name="SFR"> 
		

    <material name="Black">
        <color rgba="0.0 0.0 0.0 1.0"/>
    </material>


    <link name="base_link">
        <visual>
            <geometry>
                <mesh filename="package://bilbot_ws/meshes/chassis.dae" scale="0.001 0.001 0.001"/>
            </geometry>
            <origin xyz="0.4 0.25 0.05" rpy="${pi/2} 0.0 ${-pi/2}"/>
            <material name="Red"/>
        </visual>
        <collision>
            <geometry>
                <mesh filename="package://bilbot_ws/meshes/chassis.dae" scale="0.001 0.001 0.001"/>
            </geometry>
            <origin xyz="0.4 0.25 0.05" rpy="${pi/2} 0.0 ${-pi/2}"/>
        </collision>
    </link>



    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.07" length="0.04" />
            </geometry>
            <origin rpy="1.57075 0.0 0.0"/>
            <material name="Red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="3" length="0.05" />
            </geometry>
            <origin rpy="1.57075 0.0 0.0"/>
        </collision>
    </link>

    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_right_wheel"/>
        <origin xyz="0.2 -0.2 0.075"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>    

   

    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.05" />
            </geometry>
            <origin rpy="1.57075 0.0 0.0"/>
            <material name="Red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.07" length="0.04" />
            </geometry>
            <origin rpy="1.57075 0.0 0.0"/>
        </collision>
    </link>

    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_left_wheel"/>
        <origin xyz="0.2 0.2 0.075"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>  

   
    <link name="rear_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.05" />
            </geometry>
            <origin rpy="1.57075 0.0 0.0"/>
            <material name="Red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.07" length="0.04" />
            </geometry>
            <origin rpy="1.57075 0.0 0.0"/>
        </collision>
    </link>

    <joint name="rear_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_left_wheel"/>
        <origin xyz="-0.2 0.2 0.075"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>  

   

    <link name="rear_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.05" />
            </geometry>
            <origin rpy="1.57075 0.0 0.0"/>
            <material name="Red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.07" length="0.04" />
            </geometry>
            <origin rpy="1.57075 0.0 0.0"/>
        </collision>
    </link>

    <joint name="rear_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_right_wheel"/>
        <origin xyz="-0.2 -0.2 0.075"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    

</robot>
